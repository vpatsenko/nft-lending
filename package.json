{
  "name": "nftfi",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-foundry": "^1.1.1",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.9",
    "@nomicfoundation/hardhat-verify": "^1.0.0",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@openzeppelin/contracts": "^4.3.3",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.19",
    "@types/fs-extra": "^9.0.12",
    "@types/mocha": "^8.2.2",
    "@types/node": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@uniswap/v3-core": "^1.0.1",
    "@uniswap/v3-periphery": "^1.4.4",
    "axios": "^0.24.0",
    "chai": "^4.3.8",
    "dotenv": "^10.0.0",
    "envfile": "^6.17.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "ethers": "^6.7.1",
    "fs-extra": "^10.0.0",
    "hardhat": "^2.18.0",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-deploy": "^0.12.1",
    "hardhat-gas-reporter": "^1.0.9",
    "husky": "4.3.8",
    "lint-staged": "^11.0.0",
    "ora": "5.4.1",
    "prettier": "^2.3.2",
    "prettier-plugin-organize-imports": "^2.2.0",
    "prettier-plugin-solidity": "^1.2.0",
    "rimraf": "^3.0.2",
    "sol2uml": "^1.1.25",
    "solc-0.8": "npm:solc@0.8.4",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.4",
    "solidity-docgen": "^0.5.13",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.4.0",
    "typechain": "^8.3.1",
    "typescript": "^4.3.5"
  },
  "resolutions": {
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.4.1"
  },
  "dependencies": {
    "semaphore": "^1.1.0"
  },
  "scripts": {
    "clean": "hardhat clean && rimraf ./cache && rimraf ./artifacts && rimraf ./typechain",
    "compile": "hardhat compile",
    "build": "yarn clean && yarn compile",
    "test": "hardhat test && forge test -vv",
    "test:hardhat": "hardhat test",
    "test:foundry": "forge test -vv",
    "coverage": "hardhat coverage",
    "lint": "yarn run lint:sol && yarn run lint:ts && yarn run prettier:list-different",
    "lint:sol": "solhint --config ./.solhint.json --ignore-path ./.solhintignore --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:sol:fix": "yarn lint:sol --fix",
    "lint:ts": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "lint:ts:fix": "yarn lint:ts --fix",
    "prettier:sol": "prettier --config .prettierrc --write \"contracts/**/*.sol\"",
    "prettier:ts": "prettier --config .prettierrc --write \"**/*.{js,ts}\"",
    "prettier": "prettier --config .prettierrc --write \"**/*.{js,json,md,sol,ts}\"",
    "prettier:list-different": "prettier --config .prettierrc --list-different \"**/*.{js,sol,ts}\"",
    "doc:uml": "sol2uml ./contracts -i mocks,test,openzeppelin -f png -o ./docs/uml/nftfi.png",
    "docify": "node docify.js",
    "docgen": "yarn doc:uml && yarn docify",
    "size": "hardhat size-contracts",
    "gas-report": "REPORT_GAS=true yarn run test",
    "deploy:sepolia": "yarn update-permit-list:sepolia && hardhat --network sepolia deploy --tags NftfiHub,Wrappers,Escrow,PersonalEscrow,ERC20TransferManager,LoanTypes,PermittedNFTs,LoanCoordinator,Refinancing,DelegateCashPlugin,SetupContracts,SetupOwnerships",
    "deploy:sepolia-no-permit-list-update": "hardhat --network sepolia deploy --tags NftfiHub,Wrappers,Escrow,PersonalEscrow,ERC20TransferManager,LoanTypes,PermittedNFTs,LoanCoordinator,Refinancing,DelegateCashPlugin,SetupContracts,SetupOwnerships",
    "deploy:sepolia-testnet-punks": "hardhat --network sepolia deploy --tags TestnetPunks",
    "deploy:mainnet": "yarn update-permit-list:mainnet && hardhat --network mainnet deploy --tags NftfiHub,Wrappers,Escrow,PersonalEscrow,ERC20TransferManager,LoanTypes,PermittedNFTs,LoanCoordinator,Refinancing,DelegateCashPlugin,SetupContracts,SetupOwnerships",
    "deploy:mainnet-no-permit-list-update": "hardhat --network mainnet deploy --tags NftfiHub,Wrappers,Escrow,PersonalEscrow,ERC20TransferManager,LoanTypes,PermittedNFTs,LoanCoordinator,Refinancing,DelegateCashPlugin,SetupContracts,SetupOwnerships",
    "deploy:mainnet-hub": "hardhat --network mainnet deploy --tags NftfiHub",
    "deploy:base-sepolia": "hardhat --network base-sepolia deploy --tags NftfiHub,Wrappers,Escrow,PersonalEscrow,ERC20TransferManager,LoanTypes,PermittedNFTs,LoanCoordinator,SetupContracts,SetupOwnerships",
    "deploy:mainnet-arcade-refi": "hardhat --network mainnet deploy --tags ArcadeRefinancingAdapter",
    "deploy:local": "hardhat --network localhost deploy --tags NftfiHub,Wrappers,Escrow,PersonalEscrow,ERC20TransferManager,LoanTypes,PermittedNFTs,LoanCoordinator,Refinancing,DelegateCashPlugin,SetupContracts,SetupOwnerships",
    "deploy:local-hub": "hardhat --network localhost deploy --tags NftfiHub",
    "local-network": "hardhat node --tags ''",
    "deploy:local-arcade-refi": "hardhat --network localhost deploy --tags ArcadeRefinancingAdapter",
    "deploy:virtual-mainnet-arcade-refi": "hardhat --network virtual-mainnet deploy --tags ArcadeRefinancingAdapter",
    "reset-local-deployments": "hardhat --network localhost deploy --reset  --tags ''",
    "update-permit-list:sepolia": "hardhat run scripts/updatePermittedNfts.ts --network sepolia",
    "update-permit-list:mainnet": "hardhat run scripts/updatePermittedNfts.ts --network mainnet",
    "clone-permit-list:mainnet": "hardhat run scripts/clonePermitList.ts --network mainnet",
    "clone-permit-list:sepolia": "hardhat run scripts/clonePermitList.ts --network sepolia",
    "verify:sepolia": "hardhat run scripts/verifyContracts.ts --network sepolia",
    "verify:sepolia-mock-dydx": "hardhat run scripts/verifyContractsMockDyDx.ts --network sepolia",
    "verify-testnet-punks:sepolia": "hardhat run scripts/verifyContractsTestnetPunks.ts --network sepolia",
    "verify:mainnet": "hardhat run scripts/verifyContracts.ts --network mainnet",
    "disable:v1:rinkeby": "hardhat run scripts/disableV1.ts --network rinkeby"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "contracts/**/*.sol": [
      "yarn prettier:sol",
      "yarn lint:sol:fix"
    ],
    "**/*.{js,ts}": [
      "yarn prettier:ts",
      "yarn lint:ts:fix"
    ]
  }
}
